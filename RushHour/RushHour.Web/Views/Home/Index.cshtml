
@{
    ViewBag.Title = "Home Page";

}
@section Scripts {
    <script src='../Scripts/moment.min.js'></script>
    <script src='../Scripts/pnotify.custom.min.js'></script>
    <script src='../Scripts/jquery.min.js'></script>
    <script src='../Scripts/fullcalendar.min.js'></script>

    <link href='../Content/pnotify.custom.css' rel='stylesheet' />
    @if (RushHour.Web.Authentication.AuthenticationManager.LoggedUser != null)
    {
        <script>

        $(document).ready(function () {
            new PNotify({
                title: 'Login Success!',
                text: 'Welcome' + ' ' +'@RushHour.Web.Authentication.AuthenticationManager.LoggedUser.Name',
                type: 'success'
            });
        })
        </script>

    }

    else
    {
        <script>

        $(document).ready(function () {
            new PNotify({
                title: 'Welcome Stranger :)',
                text: 'Please Login first to see my app :)',
                type: 'info'
            });
        })
        </script>
    }

}
